<div class="booyah-box col-10 offset-1">
  <h1>Add a new section</h1>
  <%= simple_form_for @section, url: sections_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.text_field :tag_list, value: f.object.tag_list.to_s %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>